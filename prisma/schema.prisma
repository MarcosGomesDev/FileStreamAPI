generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String

  @@map("users")
}

model File {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  link      String
  type      String
  createdAt DateTime @default(now())

  @@map("files")
}
